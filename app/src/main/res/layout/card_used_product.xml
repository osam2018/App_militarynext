<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2">

    <ImageView
        android:id="@+id/used_product_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        />

    <TextView
        android:id="@+id/used_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/used_product_image"
        android:layout_marginTop="6dp"
        android:text="보충제 ㅍㅍㅍㅍㅍ"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/used_product_included"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/used_product_title"
        android:text="4284부대 일병 조영제"
        />

    <TextView
        android:id="@+id/used_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/used_product_included"
        android:text="15,00원"
        />

    <ImageView
        android:id="@+id/used_product_like_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_thumb_up_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/used_product_like_count"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:id="@+id/used_product_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/used_product_see_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="1"
        android:layout_marginEnd="4dp" />

    <ImageView
        android:id="@+id/used_product_see_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_red_eye_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/used_product_see_count"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:id="@+id/used_product_see_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp" />

</android.support.constraint.ConstraintLayout>